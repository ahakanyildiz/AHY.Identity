@model UserSignInModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<form asp-action="SignIn" method="post">
    <input type="hidden" asp-for="@Model.ReturnUrl" />
    <div class="mb-3">
        <label class="form-label">Kullanıcı Adı</label>
        <input class="form-control" asp-for="@Model.UserName" />
        <span class="text-danger" asp-validation-for="@Model.UserName"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Şifre</label>
        <input type="password" class="form-control" asp-for="@Model.Password" />
        <span class="text-danger" asp-validation-for="@Model.Password"></span>
    </div>
    <div class="form-check">
        <input class="form-check-input" asp-for="@Model.RememberMe">
        <label class="form-check-label" for="RememberMe">
            Beni Hatırla
        </label>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Giriş Yap</button>
    </div>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
</form>