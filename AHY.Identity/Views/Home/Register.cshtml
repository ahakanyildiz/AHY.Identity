@model UserCreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<form asp-action="Register" method="post">
    <div class="mb-3">
        <label class="form-label">Kullanıcı Adı</label>
        <input class="form-control" asp-for="@Model.UserName" />
        <span class="text-danger" asp-validation-for="@Model.UserName"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Email Adresi</label>
        <input class="form-control" asp-for="@Model.Email" />
        <span class="text-danger" asp-validation-for="@Model.Email"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Şifre</label>
        <input class="form-control" asp-for="@Model.Password" />
        <span class="text-danger" asp-validation-for="@Model.Password"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Şifreni Onayla</label>
        <input class="form-control" asp-for="@Model.ConfirmPassword" />
        <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
    </div>


    <div class="mb-3">
        <label class="form-label">Cinsiyet</label>
        <input class="form-control" asp-for="@Model.Gender" />
        <span class="text-danger" asp-validation-for="@Model.Gender"></span>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Kayıt Ol</button>
    </div>

    <div class="text-danger mt-2" asp-validation-summary="ModelOnly"></div>
</form>

