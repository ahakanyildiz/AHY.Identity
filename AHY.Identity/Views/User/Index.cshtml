@model List<AHY.Identity.Entities.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="Create" asp-controller="User" class="btn btn-info">Yeni Kullanıcı Ekle</a>
<table class="table table-hover table-bordered table-striped table-sm">
    <thead>
        <tr>
            <th>Username</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Role Info</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.Gender</td>
                <td>@item.Email</td>
                <td><getUserInfo user-id="@item.Id"></getUserInfo></td>
                <td><a asp-action="AssignRole" asp-controller="User" asp-route-id="@item.Id" class="btn btn-warning">Assign Role</a></td>
            </tr>
        }
    </tbody>
</table>
