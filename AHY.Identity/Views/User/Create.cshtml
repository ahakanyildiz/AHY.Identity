@model UserAdminCreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Username</label>
        <input class="form-control" asp-for="@Model.UserName" />
        <span class="text-danger" asp-validation-for="@Model.UserName"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" asp-for="@Model.Email" />
        <span class="text-danger" asp-validation-for="@Model.Email"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Cinsiyet</label>
        <input class="form-control" asp-for="@Model.Gender" />
        <span class="text-danger" asp-validation-for="@Model.Gender"></span>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-success">Kaydet</button>
    </div>
</form>